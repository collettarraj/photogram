<% was_validated = usersbest.errors.any? %>

<%= form_with(model: usersbest, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for dishes_id start -->
  <div class="form-group">
    <% dish_class = "form-control" %>
    <% dish_was_invalid = usersbest.errors.include?(:dish) %>

    <% if was_validated %>
      <% if dish_was_invalid %>
        <% dish_class << " is-invalid" %>
      <% else %>
        <% dish_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :dishes_id %>
    <!-- Input for dishes_id start -->
    <%= f.collection_select :dishes_id, Dish.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for dishes_id end -->
    <% if dish_was_invalid %>
      <% usersbest.errors.full_messages_for(:dish).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for dishes_id end -->
  <!-- Label and input for venue_id start -->
  <div class="form-group">
    <% venue_class = "form-control" %>
    <% venue_was_invalid = usersbest.errors.include?(:venue) %>

    <% if was_validated %>
      <% if venue_was_invalid %>
        <% venue_class << " is-invalid" %>
      <% else %>
        <% venue_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :venue_id %>
    <!-- Input for venue_id start -->
    <%= f.collection_select :venue_id, Venue.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for venue_id end -->
    <% if venue_was_invalid %>
      <% usersbest.errors.full_messages_for(:venue).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for venue_id end -->
  <!-- Label and input for users_id start -->
  <div class="form-group">
    <% user_class = "form-control" %>
    <% user_was_invalid = usersbest.errors.include?(:user) %>

    <% if was_validated %>
      <% if user_was_invalid %>
        <% user_class << " is-invalid" %>
      <% else %>
        <% user_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :users_id %>
    <!-- Input for users_id start -->
    <%= f.collection_select :users_id, User.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for users_id end -->
    <% if user_was_invalid %>
      <% usersbest.errors.full_messages_for(:user).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for users_id end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
