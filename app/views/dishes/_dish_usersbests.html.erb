<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Usersbests

    <a data-toggle="collapse" href="#dish_usersbests_new_form">
      Add usersbest
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @dish.usersbests.each do |usersbest| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to usersbest, usersbest %>

        <% if current_user == usersbest.users %>
          <%= link_to usersbest, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="dish_usersbests_new_form">
        <%= render partial: "dishes/dish_usersbests_new_form" %>
      </div>
    </div>

  </ul>
</div>
